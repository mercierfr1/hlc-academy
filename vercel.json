{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "appwrite-backend.js",
      "use": "@vercel/node"
    },
    {
      "src": "stripe-webhook.js",
      "use": "@vercel/node"
    },
    {
      "src": "stripe-checkout-api.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/webhooks/stripe",
      "dest": "/stripe-webhook.js"
    },
    {
      "src": "/api/create-checkout-session",
      "dest": "/stripe-checkout-api.js"
    },
    {
      "src": "/api/create-portal-session",
      "dest": "/stripe-checkout-api.js"
    },
    {
      "src": "/api/subscription/(.*)",
      "dest": "/stripe-checkout-api.js"
    },
    {
      "src": "/api/cancel-subscription/(.*)",
      "dest": "/stripe-checkout-api.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/appwrite-backend.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_APPWRITE_ENDPOINT": "https://cloud.appwrite.io/v1"
  }
}
